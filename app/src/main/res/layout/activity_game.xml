<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggame"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/llBoard"
        android:layout_width="336dp"
        android:layout_height="617dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="289dp"
            android:layout_height="197dp"
            app:srcCompat="@drawable/title" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="332dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/bt1"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:background="@drawable/buttonclear" />

                <ImageButton
                    android:id="@+id/bt2"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:background="@drawable/buttonclear" />

                <ImageButton
                    android:id="@+id/bt3"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:background="@drawable/buttonclear" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/bt4"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:background="@drawable/buttonclear" />

                <ImageButton
                    android:id="@+id/bt5"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:background="@drawable/buttonclear" />

                <ImageButton
                    android:id="@+id/bt6"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:background="@drawable/buttonclear" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/bt7"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:background="@drawable/buttonclear" />

                <ImageButton
                    android:id="@+id/bt8"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:background="@drawable/buttonclear" />

                <ImageButton
                    android:id="@+id/bt9"
                    android:layout_width="112dp"
                    android:layout_height="112dp"
                    android:background="@drawable/buttonclear" />

            </TableRow>


        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/robot" />

            <TextView
                android:id="@+id/tvWhoPlay"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/buttonclear"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back" />
        <ImageButton
            android:id="@+id/btHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/home" />

        <ImageButton
            android:id="@+id/btSoundG"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/music" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p1Score"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textAlignment="textEnd"
                android:gravity="end"

                android:background="@drawable/score"
                android:textColor="@color/white"
                android:text="player1: 0 " />

            <TextView
                android:id="@+id/p2Score"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textAlignment="textEnd"
                android:background="@drawable/score"
                android:textColor="@color/white"
                android:text="player2: 0 " />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/llwinlose"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

   <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
       android:orientation="vertical">

       <ImageView
            android:id="@+id/imgWinLose"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="300dp"
            app:srcCompat="@drawable/youwin" />

       <TextView
           android:id="@+id/tvWhoWin"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Player"
           android:textAlignment="center"
           android:textColor="@color/white"
           android:textSize="40dp" />

       <TextView
           android:id="@+id/textView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Would you like to play again?"
           android:textAlignment="center"
           android:textColor="@color/white"
           android:textSize="40dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           android:orientation="horizontal">

           <ImageButton
               android:id="@+id/btAgainWin"
               android:layout_width="81dp"
               android:layout_height="59dp"
               android:layout_gravity="center"
               android:background="@drawable/again" />

           <ImageButton
               android:id="@+id/btClose"
               android:layout_width="77dp"
               android:layout_height="63dp"
               android:layout_gravity="center"
               android:background="@drawable/close" />
       </LinearLayout>

   </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/llNoOneWin"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Would you like to play again?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btAgainNo"
                    android:layout_width="81dp"
                    android:layout_height="59dp"
                    android:layout_gravity="center"
                    android:background="@drawable/again" />

                <ImageButton
                    android:id="@+id/btCloseNo"
                    android:layout_width="77dp"
                    android:layout_height="63dp"
                    android:layout_gravity="center"
                    android:background="@drawable/close" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>